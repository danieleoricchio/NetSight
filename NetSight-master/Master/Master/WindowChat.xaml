<Window x:Class="Master.WindowChat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master"
        mc:Ignorable="d"
        Title="WindowChat" Height="390" Width="331">
    <Grid>
        <Label x:Name="lblClient" HorizontalAlignment="Left" Margin="16,10,0,0" VerticalAlignment="Top" Height="30" Width="150"/>
        <Border BorderBrush="LightGray" BorderThickness="2" CornerRadius="3.2" VerticalAlignment="Top" Height="271" Margin="24,45,31,0">
            <TextBlock x:Name="myChat" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="251" Width="256" RenderTransformOrigin="0.5,0.5" FontFamily="Arial"/>
        </Border>
        <TextBox x:Name="txtMsg" HorizontalAlignment="Left" Margin="24,321,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Height="27"/>
        <Button x:Name="btnSend" Content="Invia" HorizontalAlignment="Left" Margin="166,321,0,0" VerticalAlignment="Top" Height="27" Width="53" Click="btnSend_Click" />
    </Grid>
</Window>
